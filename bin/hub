#!/usr/bin/env ruby

require File.expand_path(File.join(File.dirname(__FILE__), '..', 'lib', 'hubmaster.rb'))

if ARGV.length > 0
  result = case ARGV[0]
    when "repos"
      case ARGV[1]
        when "--list"
          Github.connect
          Github::Repos.list(ARGV[2])
        when "--create"
          Github.connect
          Github::Repos.create(ARGV[2], ARGV[3])
        when "--delete"
          Github.connect
          Github::Repos.delete(ARGV[2])
        when "--get"
          Github.connect
          Github::Repos.get(ARGV[2], ARGV[3])
        when "--edit"
          Github.connect
          case ARGV[3]
          when "-description"
            Github::Repos.edit(:description, ARGV[2], ARGV[4])
          else
           puts "Unknown modifier for edit '#{ARGV[2]}'. Tyle hub help for assistance."
          end 
        else
          puts "Unknown Command: Type hub help for usage instructions."
        end
    when "help"
      Github.help
    when "login"
      case ARGV[1]
      when "--reset"
        Github.resetLogin
      else
      end
    else
      puts "Unknown Command: Type hub help for usage instructions."
    end
    exit
else
  puts "Unknown Command: Type hub help for usage instructions."
end

